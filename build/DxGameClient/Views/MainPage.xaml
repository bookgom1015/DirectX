<Page
    x:Class="DXGameClient.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <Grid>
            <Image Stretch="Fill" Source="/Assets/client_background_3840x2160.jpg" />
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="33" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid x:Name="CustomTitleBar">
                    <Grid x:Name="UserLayout" Background="Transparent" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Background="#88000000">                    
                    <Border>
                        <Border.Background>
                            <media:BackdropBlurBrush Amount="6.0" />
                        </Border.Background>
                    </Border>
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="36" />
                                <Setter Property="Text" Value="START" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="180" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" HorizontalAlignment="Center" Width="160" Height="70" CornerRadius="4" Padding="0">
                            <Grid>
                                <Image Stretch="Fill" Source="/Assets/nyan_cat.gif" Margin="-2" />
                                <TextBlock Foreground="Black">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="2" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Foreground="Black">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="-2" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Foreground="Black">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="2" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Foreground="Black">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="-2" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock />
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
